<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SavePDFUsingNative.KahuaViewerPage"
             xmlns:syncfusion="clr-namespace:Syncfusion.SfPdfViewer.XForms;assembly=Syncfusion.SfPdfViewer.XForms">
    <StackLayout>
        <Button Text="01 Single Page Vector" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button1_Clicked"/>
        <Button Text="02 Single Page Raster" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button2_Clicked"/>
        <Button Text="03 Multi Page Vector" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button3_Clicked"/>
        <Button Text="04 Multi Page Raster" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button4_Clicked"/>
        <Button Text="05 Single Page Vector Rotated" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button5_Clicked"/>
        <Button Text="06 Single Page Raster Rotated" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button6_Clicked"/>
        
        <Button Text="Performance Test (160 MB)" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Clicked="Button7_Clicked"/>
    </StackLayout>
</ContentPage>